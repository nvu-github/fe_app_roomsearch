<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Trang chủ"
            android:drawableStart="@drawable/ic_back_screen"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/roomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng trọ 1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_banner"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp" />
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circle_banner"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/view_banner"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Giá phòng:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView android:id="@+id/roomPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="2.000.000 đ/tháng"
                android:textSize="18sp"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Địa chỉ:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView android:id="@+id/roomAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phofng troj 1"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Diện tích:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView android:id="@+id/roomAcreage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="2dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="m²"
                android:textSize="15sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Trạng thái:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView android:id="@+id/roomStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Còn phòng"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Loại phòng:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView android:id="@+id/roomType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phòng trọ"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mô tả:"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <TextView android:id="@+id/roomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phofng troj 1"
            android:textSize="18sp"
            android:textColor="#000"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Liên hệ với chủ phòng:"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Tên chủ phòng:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView android:id="@+id/nameHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Host 1"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Số điện thoại:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView android:id="@+id/phoneHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="098761234"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="5dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>