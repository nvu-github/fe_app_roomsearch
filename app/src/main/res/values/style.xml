<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="roundimageview">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="style_btn_choose_file" parent="Widget.AppCompat.Button">
        <item name="android:drawableStart">@drawable/ic_btn_choose_file</item>
        <item name="android:background">@drawable/btn_choose_file</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="MenuItemTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
